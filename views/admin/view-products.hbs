<section>
    <div class="container">
      <div class="row mt-4">
        <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>

      </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">NO</th>
      <th scope="col">TITLE</th>
      <th scope="col">CATEGORY</th>
      <th scope="col">DESCRIPTION</th>
      <th>IMAGE</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td><img style="width: 50px;height:50px"    src="{{this.image}}" alt=""></td>
      <td>
        <a href="/admin/edit-product" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product" class="btn btn-danger">Delete</a>
          
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>