<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            font-family: Arial, sans-serif;
        }

        
        .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            padding: 20px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .col-md-3 {
            flex: 0 0 calc(25% - 20px);
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            border-radius: 8px;
            overflow: hidden;
        }

        .card {
            width: 100%;
            height: 100%;
        }

        .card-img-top {
            height: 250px;
            object-fit: cover;
        }

        .card-body {
            padding: 10px 15px;
        }

        .card-title {
            font-size: 18px;
            margin-bottom: 10px;
        }

        .card-text {
            font-size: 14px;
            color: #666;
        }

        .btn-primary {
            display: block;
            margin-top: 15px;
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 8px 15px;
            border-radius: 4px;
            text-align: center;
            cursor: pointer;
        }
    </style>
</head>
<body>
    
    <section>
        <div class="container mt-3">
            <div class="row">
                {{#each products}}
                <div class="col-md-3">
                    <div class="card">
                        <img class="card-img-top" src="{{this.image}}" alt="Product Image">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text">{{this.description}}</p>
                            <a href="/Cart/{{this.id}}" class="btn btn-primary">Add To Cart</a>

                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
</body>
</html>
